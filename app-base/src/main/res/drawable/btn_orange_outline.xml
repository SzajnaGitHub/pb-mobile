<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="12dp"  android:bottomRightRadius="12dp" />
            <gradient android:angle="270" android:endColor="@color/dark_orange" android:startColor="@color/light_orange" />
            <stroke android:width="3dp" android:color="@android:color/black"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="12dp"  android:bottomRightRadius="12dp" />
            <solid android:color="@color/light_orange" />
            <stroke android:width="3dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:bottomLeftRadius="12dp"  android:bottomRightRadius="12dp" />
            <solid android:color="@android:color/darker_gray" />
            <stroke android:width="3dp" android:color="@android:color/black"/>
        </shape>
    </item>
</selector>