<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto_bold2</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.H1"><item name="android:textSize">24sp</item></style>
    <style name="Text.H2"><item name="android:textSize">16sp</item></style>
    <style name="Text.H3"><item name="android:textSize">12sp</item></style>
    <style name="Text.Title"><item name="android:textSize">32sp</item></style>

    <style name="Text.H1.White"><item name="android:textColor">@android:color/white</item></style>
    <style name="Text.H2.White"><item name="android:textColor">@android:color/white</item></style>
    <style name="Text.H3.White"><item name="android:textColor">@android:color/white</item></style>
    <style name="Text.Title.White"><item name="android:textColor">@android:color/white</item></style>

</resources>
